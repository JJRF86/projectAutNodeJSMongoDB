<form id="productForm">
<input type="submit" value="Salir" formmethod="get" formaction="/logout">
</form>
<script type="text/javascript">
  let productList = document.createElement('ul');

  fetch('/api/product', {
    method: 'GET'
  })
  .then(res => res.json())
  .then(data => {
    data.products.map(product => {
      let text = document.createTextNode(product.name);
      let elem = document.createElement('li');
      elem.appendChild(text);
      productList.appendChild(elem);
    });
    const formProduct = document.querySelector('#productForm');
    formProduct.appendChild(productList);
    document.body.appendChild(formProduct);
  })
  .catch(err =>{
    console.log('Acceso no autorizado'+err);
  });
</script>
